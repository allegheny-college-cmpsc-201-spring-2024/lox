// Set up global variables
var lox = "lox";
var count = 1;

// Create turnaround function
fun turnAround(count, limit) {
  return count == limit;
}

// Set up the increment to also decrement
fun increment(count, delta) {
   return count + delta;
}

// Make the fish
fun makeFish(limit) {
   var goBack = false;
   while (count > 0) {

      var loxes = "";

      for (var i = 0; i < count; i = i + 1) {
         loxes = loxes + lox;
      }

      print(loxes);

      if (!goBack) {
         goBack = turnAround(count, limit);
         count = increment(count, 1);
      } else if (goBack) {
         count = increment(count, -1);
      }
   }
}

// Run the fish maker
makeFish(5);